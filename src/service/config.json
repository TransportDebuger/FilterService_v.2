{
    "defaults": {
        "logging": {
            "level": "info",
            "max_file_size": 10485760
        },
        "sources": {
            "file_mask": "*.xml",
            "processed_dir": "/backup/processed",
            "bad_dir": "/data/bad",
            "excluded_dir": "/data/excluded",
            "filtered_template": "{filename}_filtered.{ext}",
            "excluded_template": "{filename}_excluded.{ext}"
        }
    },
    "environments": {
        "development": {
            "logging": [
                {
                    "type": "console",
                    "level": "debug"
                },
                {
                    "type": "sync_file",
                    "level": "debug",
                    "file": "dev_app.log"
                }
            ],
            "sources": [
                {
                    "name": "local_xml",
                    "type": "local",
                    "path": "/data/incoming",
                    "file_mask": "*.xml",
                    "enabled": true,
                    "filtering_enabled": true,
                    "processed_dir": "/data/processed",
                    "bad_dir": "/data/bad",
                    "filtered_template": "{filename}_filtered.{ext}",
                    "excluded_template": "{filename}_excluded.{ext}"
                },
                {
                    "name": "ftp_backup",
                    "type": "ftp",
                    "path": "ftp://backup.example.com/incoming",
                    "file_mask": "data_*.xml",
                    "enabled": true,
                    "filtering_enabled": false,
                    "username": "@env('FTP_USERNAME')",
                    "password": "@env('FTP_PASSWORD')",
                    "port": 21,
                    "processed_dir": "/backup/processed",
                    "filtered_template": "processed/{filename}_filtered.{ext}",
                    "excluded_template": "excluded/{filename}_excluded.{ext}"
                }
            ]
        },
        "production": {
            "logging": [
                {
                    "type": "async_file",
                    "level": "info",
                    "file": "/var/log/myapp/prod_app.log"
                },
                {
                    "type": "console",
                    "level": "warning",
                    "rotated": true
                }
            ],
            "sources": [
                {
                    "name": "local_xml",
                    "type": "local",
                    "path": "/data/incoming",
                    "file_mask": "*.xml",
                    "enabled": true,
                    "filtering_enabled": true,
                    "processed_dir": "/data/processed",
                    "bad_dir": "/data/bad",
                    "excluded_dir": "/data/excluded/",
                    "filtered_template": "{filename}_filtered.{ext}",
                    "excluded_template": "{filename}_excluded.{ext}"
                },
                {
                    "name": "ftp_backup",
                    "type": "ftp",
                    "path": "ftp://backup.example.com/incoming",
                    "file_mask": "data_*.xml",
                    "enabled": true,
                    "filtering_enabled": false,
                    "username": "@env('FTP_USERNAME')",
                    "password": "@env('FTP_PASSWORD')",
                    "port": 21,
                    "processed_dir": "/backup/processed",
                    "filtered_template": "processed/{filename}_filtered.{ext}",
                    "excluded_template": "excluded/{filename}_excluded.{ext}"
                }
            ],
            "comparison_list": "./comparison_list.csv"
        }
    }
}